@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h4>Add a new Recipe</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Please enter a list of ingredients separated with a comma")
  @Html.TextArea("ingredientString")

  @Html.Label("Select Category")
  @Html.DropDownList("CategoryId")

  <input type="submit" value="Add a new Recipe" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all Recipes", "Index")</p>