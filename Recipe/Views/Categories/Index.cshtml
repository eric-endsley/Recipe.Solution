@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Category>;

<h1>Category Page</h1>

@if (Model.Count == 0)
{
  <h3>No Categories have been added to the SQL database</h3>
}

<ul>
  @foreach (Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId})</li>
  }
</ul>

<p>@Html.ActionLink("Add a new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>